<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="304.0" prefWidth="421.0"
            stylesheets="@../../../../resources/dark_theme.css" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="library.assistant.ui.login.LoginController">
    <children>
        <JFXTextField fx:id="username" labelFloat="true" layoutX="96.0" layoutY="106.0" prefHeight="30.0"
                      prefWidth="241.0" promptText="Username">
            <font>
                <Font size="16.0"/>
            </font>
        </JFXTextField>
        <JFXPasswordField fx:id="password" labelFloat="true" layoutX="96.0" layoutY="173.0"
                          onAction="#handleLoginButtonAction" prefHeight="33.0" prefWidth="241.0" promptText="Password">
            <font>
                <Font size="17.0"/>
            </font>
        </JFXPasswordField>
        <JFXButton layoutX="92.0" layoutY="249.0" onAction="#handleLoginButtonAction" prefHeight="41.0" prefWidth="88.0"
                   text="Login"/>
        <JFXButton layoutX="218.0" layoutY="249.0" onAction="#handleCancelButton" prefHeight="41.0" prefWidth="88.0"
                   text="Cancel"/>
        <FontAwesomeIconView glyphName="LOCK" layoutX="181.0" layoutY="61.0" size="55"/>
        <FontAwesomeIconView glyphName="USER" layoutX="66.0" layoutY="130.0" size="25"/>
        <FontAwesomeIconView glyphName="KEY" layoutX="62.0" layoutY="201.0" size="25"/>
    </children>
</AnchorPane>
